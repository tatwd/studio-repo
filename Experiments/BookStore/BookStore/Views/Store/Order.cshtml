@model BookStore.Models.Books
@{
    Layout = "~/Views/_Layout.cshtml";
    ViewBag.Title = "Order";
}

<h2>Order</h2>

<div id="order" class="row">
    <div class="col s2">
        <img class="responsive-img" src="../../assets/img/@ViewBag.BookCoverUrl" alt="Book Image"/>
    </div>
    <div class="col s10">
        <ul class="collection with-header">
            <li class="collection-header">
                <h4>#@ViewBag.BookId @ViewBag.BookTitle</h4>
            </li>
            <li class="collection-item">作者：@ViewBag.Authors</li>
            <li class="collection-item">价格：￥@ViewBag.Price</li>
        </ul>
        @using (Html.BeginForm("Order", "Store", FormMethod.Post, new { id = "order-form" }))
        {
            <div class="input-field">
                <label>编号</label>
                <input id="BookId" name="BookId" type="text" value="@ViewBag.BookId" disabled/>
            </div>
            <div class="input-field">
                <label>数量</label>
                <input id="BookCount" name="BookCount" type="text"/>
            </div>
            <div class="input-field">
                <label>地址</label>
                <input id="Address" name="Address" type="text"/>
            </div>

            <input type="submit" value="提交" class="btn red"/>
            <a href="/" class="btn grey">返回</a>
        }
    </div>
</div>