@model MvcSignPage.Models.User
@{
    ViewBag.Title = "注册";
}
@using (Html.BeginForm("SignUp", "User", FormMethod.Post, new { id = "signForm" }))
{
    // @Html.AntiForgeryToken()

    <h2>Sign Up Page</h2>
    <div class="container">
        <div class="title-box">注册</div>
        <div class="input-box">

            <div class="name">
                @Html.TextBoxFor(m => m.Username, new { id = "nameBox", placeholder = "用户名" })
                @Html.ValidationMessageFor(model => model.Username, "", new {id = "notNullName", @class = "validator" })
            </div>

            <div class="email">
                @Html.TextBoxFor(m => m.Email, new { id = "emailBox", placeholder = "邮箱" })
                @Html.ValidationMessageFor(model => model.Email, "", new { id = "notNullEmail", @class = "validator" })
            </div>

            <div class="phone">
                @Html.TextBoxFor(m => m.Telephone, new { id = "phoneBox", placeholder = "手机号" })
                @Html.ValidationMessageFor(model => model.Telephone, "", new { id = "notNullEmail", @class = "validator" })
                @*<asp:RegularExpressionValidator ID="checkPhone" CssClass="validator" runat="server" ControlToValidate="phoneBox" ErrorMessage="请输入正确的手机号" ValidationExpression="^1(3|4|5|7|8)\d{9}$"></asp:RegularExpressionValidator>*@
            </div>

            <div class="passwd">
                @Html.PasswordFor(m => m.Password, new { id = "passwdBox", placeholder = "密码（6~20位）" })
                @Html.ValidationMessageFor(model => model.Password, "", new { id = "notNullEmail", @class = "validator" })
                @*<asp:CustomValidator ID="checkPasswdLength" CssClass="validator" runat="server" ControlToValidate="passwdBox" ErrorMessage="请输入6~20位的密码" ClientValidationFunction="checkLength"></asp:CustomValidator>*@
            </div>

            <div class="confirm-passwd">
                @Html.PasswordFor(m => m.Password, new { id = "confirmPasswdBox", placeholder = "确认密码" })
                @Html.ValidationMessageFor(model => model.Password, "", new { id = "notNullEmail", @class = "validator" })
                @*<asp:CompareValidator ID="confirmPasswd" CssClass="validator" runat="server" ControlToCompare="passwdBox" ControlToValidate="confirmPasswdBox" ErrorMessage="密码输入不一致"></asp:CompareValidator>*@
            </div>
        </div>
        <div class="sign-btn">
            <input type="submit" value="提交" id="signUpBtn" />
        </div>

        <div class="tip">
            @Html.ActionLink("已有账号？马上登录！", "SignIn")
        </div>
    </div>

    <div class="label">
    @if (ViewBag.IsSignIn != null)
    {
        <span id="tipLabel">注册失败</span>
    }
    </div>
}
